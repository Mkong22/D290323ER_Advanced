<Window x:Class="RecursiveFolderTree.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RecursiveFolderTree"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
	<DockPanel>
		<StackPanel DockPanel.Dock="Top">
			<Button Content="Select Folder..." Margin="10" Click="SelectFolderClick" />
			<TextBlock Text="Selected root:" Margin="10" HorizontalAlignment="Center" />
			<TextBlock Name="SelectedRootTextBlock" Margin="10"  HorizontalAlignment="Center" />
		</StackPanel>
		<TreeView Name="ResultsTreeView" />
	</DockPanel>
</Window>
