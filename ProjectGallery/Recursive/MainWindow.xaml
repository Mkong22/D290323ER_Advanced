<Window x:Class="Recursive.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Recursive"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
	<StackPanel>
		<TextBox Name="UserInput" Margin="10" />
		<Button Content="Calculate Factoral" Margin="10" Click="Button_Click" />
		<TextBlock Name="Result" HorizontalAlignment="Center" Text="Enter a value and click the button" Margin="10"/>
	</StackPanel>
</Window>
